{{page-title "Cart"}}
<main class="container mt-5">
  <h2>Shopping Cart</h2>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <LinkTo @route="index">Home</LinkTo>
      </li>
    <li class="breadcrumb-item">
      <LinkTo @route="cart">Shopping Cart</LinkTo>
    </li>
  </ol>
  <div class="w-50 ml-auto text-right mb-5">
    <div class="row">
      <span class="col">Subtotal</span>
      <span class="col">{{currency this.subtotal}}</span>
    </div>
    <div class="row">
      <span class="col">Tax</span>
      <span class="col">{{currency this.tax}}</span>
    </div>
    <div class="row">
      <span class="col">Total</span>
      <span class="col">{{currency this.total}}</span>
    </div>
  </div>

  <button class="btn btn-success float-right">
    Check out
  </button>
</main>
